#!/bin/bash
# splittexts -- split the textfiles in the intray
# 20140928 Paul Huygen
CURDIR=`pwd`
SCRIPT=`realpath $0`
SCRIPTPATH=`dirname $SCRIPT`
cd $SCRIPTPATH
cd ..
ROOT=`pwd`
INTRAY=$ROOT/data/intray
cd $CURDIR

MAXLINES=100
tmpdir=`mktemp -d -t aap.XXXXXX`
mv $INTRAY/* $tmpdir/
cd $tmpdir
for f in *
do
   split -l $MAXLINES $f $INTRAY/$f
done
rm -rf $tmpdir
cd $CURDIR
